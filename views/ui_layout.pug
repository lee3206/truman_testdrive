doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    meta(name="HandheldFriendly" content="True")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="mobile-web-app-capable" content="yes")
    meta(name="msapplication-tap-highlight" content="no")
    meta(name="content-language" content="en_US")
    title #{title} - Social Media TestDrive
    link(rel='shortcut icon', href='/favicon.ico')
    link(rel='manifest', href='/manifest.json')
    link(rel='stylesheet', href='/semantic/dist/semantic.min.css')
    link(rel='stylesheet', href='/js/lib/introjs.min.css')
    //-link(rel='stylesheet', href='/js/themes/introjs-nassim.css')
    style(type='text/css').
      body {
      background-color: #F5F8FA;
      padding: 0em;
      
      }
      .hidden 
      { 
        display: none; 
      }
      .ui.menu .item img.logo {
      margin-left: 3.5em;
      }
      a
      {
        cursor: pointer;
      }
      button
      {
        cursor: pointer;
      }
      .ui.button
      {
        cursor: pointer;
      }
      #newpost.ui.fluid.left.labeled.right.icon.input
      {
        cursor: pointer; 
      }
      .main.container {
      margin-top: 5em;
      }
      .ui.fluid.card > .content > .description
      {
      font-size: 1.30em;
      }
      .wireframe {
      margin-top: 2em;
      }
      .image-upload > input
      {
          display: none;
      }
      .image-upload img
      {
          cursor: pointer;
      }
      .introjs-hint-dot
      {
        background:blue;
      }
      .introjs-hint-pulse
      {
        background:blue;
      }
      .introjs-tooltiptext
      {
        font-size: large;
      }
      .introjs-skipbutton.introjs-donebutton
      {
        visibility: visible;
        color: rgba(255,255,255,.9);
        background-image: linear-gradient(#21ba45,#21ba45);
        text-shadow: 0px 0px 0 #fff;
        float: right;
        margin-left: 5px;
        border: 0px solid #d4d4d4;
      }
      .introjs-skipbutton
      {
        visibility: hidden;
      }
      .info_button {
          border-radius: 14px;
          border:2px solid #cacacab0;
          box-sizing: border-box;
          color: #2185d0;
          background-color:#ffffff;   
          box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1); 
          z-index: 12;
          text-align:center;      
          overflow: hidden;
          cursor:pointer;
      }
      .glowing-border {
          border: 2px solid #dadada !important;
          border-radius: 7px !important;
      }
      .glowing-border:focus { 
          outline: none !important;
          border-color: #9ecaed !important;
          box-shadow: 0 0 10px #9ecaed !important;
      }  
      
  script.
    if ('serviceWorker' in navigator) {
    console.log("Will the service worker register?");
    navigator.serviceWorker.register('/service-worker.js')
    .then(function(reg){
    console.log("Yes, it did.");
    }).catch(function(err) {
    console.log("No it didn't. This happened: ", err)
    });
    }

  body
    .ui.vertically.padded.grid.container
      include partials/ui_header
      include partials/ui_flash
      block content

    //include partials/ui_footer
    

    script(src='/js/lib/jquery-3.1.1.min.js')
    script(src='/js/lib/humanized_time_span.js')
    script(src='/js/lib/lazyload.transpiled.min.js')
    script(src='/js/lib/intro.min.js')
    script(src='/semantic/dist/semantic.min.js')
    script(src='/js/main.js')
    block scripts

